{
  "openapi": "3.0.2",
  "info": {
    "title": "Booklist RESTful API",
    "version": "1",
    "description": "OpenAPI for Booklist RESTful API",
    "termsOfService": "https://github.com/Tyn-Tian",
    "contact": {
      "name": "Christian",
      "email": "kristian2015@gmail.com",
      "url": "https://www.linkedin.com/in/christian72/"
    },
    "license": {
      "name": "APACHE 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0"
    }
  },
  "servers": [
    {
      "description": "Booklist RESTful API Server",
      "url": "https://{environment}.christian.com/api/v1",
      "variables": {
        "environment": {
          "description": "Server Enviroment",
          "default": "dev",
          "enum": ["dev", "qa", "prod"]
        }
      }
    }
  ],
  "externalDocs": {
    "description": "linkedin Christian",
    "url": "https://www.linkedin.com/in/christian72/"
  },
  "paths": {
    "/booklist": {
      "get": {
        "summary": "Get all booklist",
        "description": "Get all incompleted booklist by default",
        "parameters": [
          {
            "name": "include completed",
            "in": "query",
            "required": false,
            "description": "Is include completed booklist",
            "schema": {
              "type": "boolean",
              "nullable": true,
              "default": false
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "filter booklist by name",
            "schema": {
              "type": "string",
              "nullable": true,
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "summary": "Create new booklist",
        "description": "Create new booklist to database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "required": true
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "default": 1,
                    "required": true
                  },
                  "genre": {
                    "type": "array",
                    "required": false,
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/booklist/{booklistId}": {
      "put": {
        "summary": "Update existing booklist",
        "description": "Update existing booklist in database",
        "parameters": [
          {
            "name": "booklistId",
            "in": "path",
            "required": true,
            "description": "Booklist id for update",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1,
                    "required": true
                  },
                  "priority": {
                    "type": "integer",
                    "format": "int32",
                    "default": 1,
                    "required": true
                  },
                  "genre": {
                    "type": "array",
                    "required": false,
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {}
      },
      "delete": {
        "summary": "Delete existing booklist",
        "description": "Delete existing booklist in database",
        "parameters": [
          {
            "name": "booklistId",
            "in": "path",
            "required": true,
            "description": "Booklist id for deteled",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      }
    }
  }
}
